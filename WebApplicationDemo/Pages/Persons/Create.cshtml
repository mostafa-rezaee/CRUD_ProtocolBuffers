@page
@model WebApplicationDemo.Pages.Persons.CreateModel
@{
    ViewData["Title"] = "Create Person";
}

<h1>Create</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonModel.FirstName" class="control-label"></label>
                <input asp-for="PersonModel.FirstName" class="form-control" />
                <span asp-validation-for="PersonModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonModel.LastName" class="control-label"></label>
                <input asp-for="PersonModel.LastName" class="form-control" />
                <span asp-validation-for="PersonModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonModel.NationalCode" class="control-label"></label>
                <input asp-for="PersonModel.NationalCode" class="form-control" />
                <span asp-validation-for="PersonModel.NationalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Birth Year</label>
                <input asp-for="PersonModel.BirthDate.Year" class="form-control" />
                <span asp-validation-for="PersonModel.BirthDate.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Birth Month</label>
                <input asp-for="PersonModel.BirthDate.Month" class="form-control" />
                <span asp-validation-for="PersonModel.BirthDate.Month" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Birth Day</label>
                <input asp-for="PersonModel.BirthDate.Day" class="form-control" />
                <span asp-validation-for="PersonModel.BirthDate.Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Persons/Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
